<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingStart="16dp">

    <EditText
        android:id="@+id/lbl_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="Example Text"/>

    <EditText
        android:id="@+id/lbl_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_item_text"
        android:layout_alignBottom="@+id/lbl_item_text"
        android:layout_centerHorizontal="true"
        android:gravity="center|right|end"
        android:inputType="numberDecimal"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="0.00" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_item_category"
        android:gravity="center"
        android:layout_alignTop="@+id/lbl_item_cost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />
</RelativeLayout>